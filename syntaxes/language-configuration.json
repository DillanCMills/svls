{
   "comments": {
      "lineComment": "//",
      "blockComment": ["/*", "*/"]
   },
   "brackets": [
      ["(", ")"],
      ["[", "]"],
      ["{", "}"],
      ["begin", "end"],
      ["task", "endtask"],
      ["module", "endmodule"],
      ["function", "endfunction"],
      ["primitive", "endprimitive"],
      ["class", "endclass"],
      ["package", "endpackage"],
      ["sequence", "endsequence"],
      ["program", "endprogram"],
      ["clocking", "endclocking"],
      ["property", "endproperty"],
      ["group", "endgroup"],
      ["interface", "endinterface"],
      ["fork", "join"],
      ["fork", "join_any"],
      ["fork", "join_none"],
      ["case", "endcase"],
      ["casez", "endcase"],
      ["casex", "endcase"],
      ["config", "endconfig"],
      ["generate", "endgenerate"],
      ["specify", "endspecify"],
      ["table", "endtable"]
   ],
   "colorizedBracketPairs": [
      ["(", ")"],
      ["[", "]"],
      ["{", "}"],
      ["begin", "end"],
      ["task", "endtask"],
      ["module", "endmodule"],
      ["function", "endfunction"],
      ["primitive", "endprimitive"],
      ["class", "endclass"],
      ["package", "endpackage"],
      ["sequence", "endsequence"],
      ["program", "endprogram"],
      ["clocking", "endclocking"],
      ["property", "endproperty"],
      ["group", "endgroup"],
      ["interface", "endinterface"],
      ["fork", "join"],
      ["fork", "join_any"],
      ["fork", "join_none"],
      ["case", "endcase"],
      ["casez", "endcase"],
      ["casex", "endcase"],
      ["config", "endconfig"],
      ["generate", "endgenerate"],
      ["specify", "endspecify"],
      ["table", "endtable"]
   ],
   "autoClosingPairs": [
      ["(", ")"],
      ["[", "]"],
      ["{", "}"],
      { "open": "'", "close": "'", "notIn": ["string", "comment"] },
      { "open": "\"", "close": "\"", "notIn": ["string"] },
      // { "open": "`", "close": "`", "notIn": ["string", "comment"] },
      { "open": "/**", "close": " */", "notIn": ["string"] },
      ["begin", "end"],
      ["fork", "join"],
      ["fork", "join_any"],
      ["fork", "join_none"]
   ],
   "autoCloseBefore": ";:.,=}])> \n\t",
   "surroundingPairs": [
      ["(", ")"],
      ["[", "]"],
      ["{", "}"],
      ["'", "'"],
      ["\"", "\""],
      ["`", "`"],
      ["begin", "end"],
      ["fork", "join"],
      ["fork", "join_any"],
      ["fork", "join_none"]
   ],
   "folding": {
      "markers": {
         "start": "",
         "end": ""
      }
   },
   "wordPattern": "(-?\\d*\\.\\d\\w*)|([^\\`\\~\\!\\@\\#\\%\\^\\&\\*\\(\\)\\-\\=\\+\\[\\{\\]\\}\\\\\\|\\;\\:\\'\\\"\\,\\.\\<\\>\\/\\?\\s]+)",
   "indentationRules": {
      "increaseIndentPattern": "^((?!\\/\\/).)*(\\{[^}\"'`]*|\\([^)\"'`]*|\\[[^\\]\"'`]*)$",
      "decreaseIndentPattern": "^((?!.*?\\/\\*).*\\*/)?\\s*[\\)\\}\\]].*$"
   },
   "onEnterRules": [
      {
         "beforeText": "^\\s*(?:def|class|for|if|elif|else|while|try|with|finally|except|async).*?:\\s*$",
         "action": {
            "indent": "indent"
         }
      }
   ]
}